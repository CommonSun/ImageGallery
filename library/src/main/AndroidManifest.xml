<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.etiennelawlor.imagegallery.library">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application android:allowBackup="true" android:label="@string/app_name">

        <activity
            android:launchMode="singleInstance"
            android:name="com.etiennelawlor.imagegallery.library.activities.FullScreenImageGalleryActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label=""
            android:theme="@style/ImageGalleryTheme" />
        <activity
            android:launchMode="singleInstance"
            android:name="com.etiennelawlor.imagegallery.library.activities.PhotoGalleryActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label=""
            android:theme="@style/ImageGalleryTheme" />
        <activity
            android:launchMode="singleInstance"
            android:name="com.etiennelawlor.imagegallery.library.activities.ImageGalleryActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label=""
            android:theme="@style/ImageGalleryTheme" />
        <activity
            android:launchMode="singleInstance"
            android:name="com.etiennelawlor.imagegallery.library.activities.SelectedImagesAnnotationGalleryActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label=""
            android:theme="@style/ImageGalleryTheme"
            android:windowSoftInputMode="adjustPan|adjustNothing"/>


    </application>

</manifest>
